<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="nl.evillage">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <service
                android:name="nl.evillage.notifications.ClangIntentService"
                android:exported="false">
        </service>

        <service
                android:name="nl.evillage.notifications.ClangFirebaseMessagingService"
                android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <activity android:name="nl.evillage.thank_you.ThankYouActivity">
        </activity>
        <activity android:name="nl.evillage.poll.PollActivity">
        </activity>

        <service
                android:name="nl.evillage.AppFirebaseService"
                android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <activity android:name="nl.evillage.LoginActivity">
        </activity>
        <activity android:name="nl.evillage.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="nl.evillage.NotificationClickedActivity" />

        <meta-data
                android:name="com.google.firebase.messaging.default_notification_channel_id"
                android:value="channel-01"/>
    </application>

</manifest>